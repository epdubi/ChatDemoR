@page
@model KnowledgeShareR.Pages.GroupsModel
@{
    ViewData["Title"] = "Groups";
    var hubGroups = Model.HubGroups;
}

    <div class="container">
        <h1>Groups</h1>
        <div class="row justify-content-center text-center">
            <div class="form-group col-12">
                <form>
                    @Html.DropDownList("hub-groups",
                                      new SelectList(hubGroups),
                                      "Select Group",
                                      new { @class = "form-control" })
                    <button id="hubGroupBtn" type="button">Join</button>
                </form>
            </div>
        </div>
    </div>

