@page
@model VoteModel
@{
    ViewData["Title"] = "Vote";
    var username = Model.UserName;
}

@if(string.IsNullOrWhiteSpace(username) && !User.Identity.IsAuthenticated)
{
    <h1>Please enter your Username</h1>
    <form method="post" id="usernameInput">
    @Html.TextBoxFor(o=>o.UserName)
    <input type="submit">
    </form>
}
else
{
    <h1>Welcome, <span id="username">@username</span></h1>
    <p>Use this page to cast your vote.</p>

    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">Answer</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
            <div class="col-6">
                <input type="button" id="countDownButton" value="CountDown" />
            </div>
        </div>
    </div>
}

